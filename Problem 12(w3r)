class Shape {
	double radius;
	double height;
	public Shape(double radius) {
		this.radius=radius;
	}
	public Shape(double radius,double height) {
		this.radius=radius;
		this.height=height;
	}
	public void draw() {
		System.out.println("Shape drawn");
	}
	
	public double calculateArea() {
		return 0.0;
	}
}


class Circle extends Shape{
	public Circle(double radius) {
		super(radius);
	}
	
	@Override
	public void draw() {
		System.out.println("Circle Shape Drawn");
	}
	
	@Override
	public double calculateArea() {
		double area= Math.PI*radius*radius;
		return area;
	}
}


public class Cylinder extends Shape {
	public Cylinder(double radius,double height) {
		super(radius,height);
	}
	
	@Override
	public void draw() {
		System.out.println("Cylinder Shape Drawn");
	}
	
	@Override
	public double calculateArea() {
		double area= (2*3.1416*radius*height)+(2*3.1416*radius*radius);
		return area;
	}
}
